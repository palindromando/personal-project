<%- include('../partials/nav') -%>

<main>
    <main class="submission">
        <h3>Login</h3>
        <div class="form">
        <form action="/login" method="POST">
            <div>
                <label for="username">Username:</label>
                <input type="text" name="username" id="username" placeholder="username" required/>
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" placeholder="password" required/>
            </div>
            <input class="contribute-button" type="submit" value="Submit">
            <p><a href="/auth/google" class="btn">Login with Google</a></p>
            <p>Don't Have An Account? <a href="/docs/archive"> Enter as guest or</a> <a href="/register">create one here.</a></p>
        </form>
</main>

