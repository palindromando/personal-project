<%- include('../partials/head') -%> 
    
<%- include('../partials/nav') -%> 

<main>
  <h1 class="heading"> <span>update docs</span> </h1>
  <form action="/docs/<%= foundDocs._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title: </label>
      <input type="text" name="title" id="title" minlength="1" value="<%= foundDocs.title %>" required />
  </div>

  <div>
      <label for="subject">Subject: </label>
      <input type="text" name="subject" id="subject" minlength="5" value="<%= foundDocs.subject %>"required />
  </div>

  <div>
      <label for="date">Date: </label>
      <input type="text" name="date" id="date" min="1" value="<%= foundDocs.date %>" required />
  </div>

  <div>
      <label for="location">Location: </label>
      <input type="text" name="location" id="location" min="1" value="<%= foundDocs.location %>" required />
  </div>

  <div>
    <label for="pages">Page(s): </label>
    <input type="text" name="numberofpages" id="numberofpages" min="1" value="<%= foundDocs.pages %>" required />
 </div>

 <div>
    <label for="source">Source: </label>
    <input type="text" name="source" id="source" min="1" value="<%= foundDocs.source %>" required />
</div>

<div>
    <label for="type">Type: </label>
    <input type="text" name="type" id="type" min="1" value="<%= foundDocs.source %>" required />
</div>

  <div>
      <label for="synopsis">Synopsis:</label>
      <textarea class="text-area-label" name="synopsis" id="synopsis" ><%= foundDocs.synopsis %></textarea>
  </div>

    <div>
        <input type="submit" value="Submit"/>
    </div>

</form>
</main>

<%- include('../partials/footer') -%> 